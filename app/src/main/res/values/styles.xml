<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="PitchBlack" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#999</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="android:textViewStyle">@style/DarkTextView</item>
    </style>

    <style name="DarkButton" parent="Widget.AppCompat.Button">
        <item name="android:maxLines">1</item>
        <item name="android:enabled">false</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:backgroundTint">#000</item>
    </style>

    <style name="DarkTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:editable">false</item>
        <item name="android:textColor">#999</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>
</resources>
